@model IEnumerable<Cars_New.Models.Car>

<div class="row mt-5 mb-2">
    @foreach (var item in Model)
    {
        <div class="col-lg-4">
            <img class="img-thumbnail" src="@item.img" alt="@item.name"/>
            <h2>@item.name</h2>
            <p>@item.longDisk</p>
            <p>Цена: @item.sum.ToString("c")</p> 

                    <a asp-action="GetIdCars" asp-route-id="@item.id">Подробнее</a>
                    <a asp-action="Delete" asp-route-id="@item.id">Удалить</a> 
                    <a asp-action="Buy">Купить авто</a> 
        </div>
    }
</div>

